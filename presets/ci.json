{
  "filesystem": {
    "allowWrite": [
      "./dist/**",
      "./build/**",
      "./target/**",
      "./out/**",
      "./.next/**",
      "./coverage/**",
      "./.venv/**",
      "./venv/**",
      "~/.cache/pip/**",
      "~/.cache/uv/**",
      "~/.cargo/**",
      "~/.npm/**",
      "~/.pnpm-store/**"
    ],
    "allowUnlink": [
      "./dist/**",
      "./build/**",
      "./target/**",
      "./out/**",
      "./.next/**",
      "./coverage/**",
      "./.venv/**",
      "./venv/**"
    ],
    "denyWrite": [
      "~/.srt/srt-settings.json",
      "~/.srt-settings.json"
    ]
  },
  "network": {
    "defaultPolicy": "deny",
    "allowedDomains": [
      "registry.npmjs.org",
      "*.npmjs.org",
      "pypi.org",
      "*.pypi.org",
      "files.pythonhosted.org",
      "crates.io",
      "*.crates.io",
      "static.crates.io",
      "pkg.go.dev",
      "proxy.golang.org",
      "sum.golang.org"
    ]
  }
}
